#home
  menuWidth = 250px
  smallWidth = 35.5em
  menuTransition()
    transition: all 0.2s ease-out

  color: #555

  .loading
    width: 100%
    text-align: center
    animation-iteration-count: infinite

  .link-icon
    color: black
    padding-right: .5em

  .datetime
    margin-right: .5em
    font-size: 80%
    vertical-align: text-top
    color: #aaa

  #menu-btn
    display: none

    @media (max-width: smallWidth)
      display: block
      position: fixed
      top: 0
      left: 0
      z-index: 1000
      height: auto
      padding: .3em .6em
      menuTransition()
      &.active
        left: menuWidth

  #menu
    position: fixed
    top: 0
    left: 0
    overflow-y: auto
    width: menuWidth
    menuTransition()
    background-color: white


    @media (max-width: smallWidth)
      z-index: 1000
      left: -(menuWidth)
      &.active
        left: 0

  
  #main
    padding-left: menuWidth
    overflow-y: scroll
    background-color: white

    .overlay
      position: fixed
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: -500
      background-color: #fff
      // display: none
      menuTransition()

    @media (max-width: smallWidth)
      padding-left: 0

      .overlay.active
        // display: block
        background-color: #0005
        z-index: 500

    #header
      min-height: 1em

    #content
      max-width: 800px
      margin: 0 auto
      padding 0 2em

      .feed
        border-bottom: 1px solid #999
        .desc
          font-style: italic
          font-size: 80%

      .feed-items
        margin: 0 auto

      .feed-item
        border-bottom: 1px solid #ddd
        padding: 0.5em 0
        .title
          cursor: pointer
          &.selected
            font-weight: bold
        .body
          padding: 1em
          font-size: 95%

      .pagination
        text-align: center
        padding: 10 0

        .loadButton
          margin: 0.5em
    
     


